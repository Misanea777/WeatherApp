<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/day_gradient_color"
        tools:context=".ui.forecast.TodayForecastFragment">

        <TextView
            android:id="@+id/city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="@dimen/margin_top"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Chisinau" />


        <TextView
            android:id="@+id/time_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="101dp"
            android:layout_marginTop="@dimen/margin_top"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/city_text"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12:" />

        <TextView
            android:id="@+id/time_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"
            app:layout_constraintStart_toEndOf="@id/time_hour"
            app:layout_constraintTop_toTopOf="@id/time_hour"
            tools:text="00"

            />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_text"
            tools:text="Monday, September 13" />


        <ImageView
            android:id="@+id/sun_image"
            android:layout_width="300dp"
            android:layout_height="236dp"
            android:layout_marginTop="179dp"
            android:src="@drawable/sun_with_clouds"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weather_data"
            android:layout_width="329dp"
            android:layout_height="91dp"
            android:background="@drawable/rectangle_current_weather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sun_image">

            <TextView
                android:id="@+id/temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_rect_margin_start_end"
                android:layout_marginTop="19dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Temp" />

            <TextView
                android:id="@+id/temp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/temp_text"
                app:layout_constraintStart_toStartOf="@id/temp_text"
                app:layout_constraintTop_toBottomOf="@id/temp_text"
                tools:text="24Â°" />

            <TextView
                android:id="@+id/wind_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintEnd_toStartOf="@+id/humidity_text"
                app:layout_constraintStart_toEndOf="@+id/temp_text"
                app:layout_constraintTop_toTopOf="@id/temp_text"
                tools:text="Wind" />

            <TextView
                android:id="@+id/wind_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/wind_text"
                app:layout_constraintStart_toStartOf="@+id/wind_text"
                app:layout_constraintTop_toBottomOf="@id/wind_text"
                tools:text="10km/h" />

            <TextView
                android:id="@+id/humidity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/big_rect_margin_start_end"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/wind_text"
                tools:text="Humidity" />

            <TextView
                android:id="@+id/humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/humidity_text"
                app:layout_constraintStart_toStartOf="@+id/humidity_text"
                app:layout_constraintTop_toBottomOf="@+id/humidity_text"
                tools:text="30%" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/hourly_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/weather_forecast"
            app:layout_constraintStart_toStartOf="@+id/weather_data"
            app:layout_constraintTop_toBottomOf="@+id/weather_data"
            tools:text="Hourly forecast">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_forecast"
            android:layout_width="100dp"
            android:layout_height="96dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="17dp"
            android:scrollbars="horizontal"
            app:layout_constraintStart_toStartOf="@id/hourly_text"
            app:layout_constraintTop_toBottomOf="@+id/hourly_text">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>