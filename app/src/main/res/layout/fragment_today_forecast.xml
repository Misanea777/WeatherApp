<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="viewModel"
            type="com.endava.internship.mobile.weatherapp.com.endava.internship.mobile.weatherapp.viewmodels.TodayForecastViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.forecast.today.TodayForecastFragment">

        <TextView
            android:id="@+id/city_text"
            style="@style/TextViewStyleByWeatherDesign.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/city_text_margin_start"
            android:layout_marginTop="@dimen/margin_top"
            android:text="@{viewModel.currentCity}"
            android:textSize="@dimen/text_size_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Chisinau" />

        <TextView
            android:id="@+id/time_hour"
            style="@style/TextViewStyleByWeatherDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="101dp"
            android:layout_marginTop="@dimen/margin_top"
            android:textSize="@dimen/text_size_big"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/city_text"
            app:layout_constraintTop_toTopOf="parent"
            app:spanTimeText="@{viewModel.currentTime}"
            tools:text="12:00" />

        <TextView
            android:id="@+id/date_text"
            style="@style/TextViewStyleByWeatherDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_date_text"
            android:text="@{viewModel.localDate}"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_text"
            tools:text="Monday, September 13" />

        <ImageView
            android:id="@+id/sun_image"
            android:layout_width="@dimen/sun_image_layout_width"
            android:layout_height="@dimen/sun_image_layout_height"
            android:layout_marginTop="@dimen/sun_image_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setIcon="@{viewModel.imageIcon}"
            tools:src="@drawable/ic_thunder" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weather_data"
            android:layout_width="@dimen/weather_data_layout_width"
            android:layout_height="@dimen/weather_data_layout_height"
            android:background="@drawable/rectangle_current_weather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sun_image">

            <TextView
                android:id="@+id/temp_text"
                style="@style/TextViewStyleByWeatherDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_rect_margin_start_end"
                android:layout_marginTop="@dimen/temp_text_margin_top"
                android:text="@string/temp"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Temp" />

            <TextView
                android:id="@+id/temp_value"
                style="@style/TextViewStyleByWeatherDesign.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/temp_value(viewModel.currentData[0])}"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintEnd_toEndOf="@+id/temp_text"
                app:layout_constraintStart_toStartOf="@id/temp_text"
                app:layout_constraintTop_toBottomOf="@id/temp_text"
                tools:text="24Â°" />

            <TextView
                android:id="@+id/wind_text"
                style="@style/TextViewStyleByWeatherDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintEnd_toStartOf="@+id/humidity_text"
                app:layout_constraintStart_toEndOf="@+id/temp_text"
                app:layout_constraintTop_toTopOf="@id/temp_text"
                tools:text="Wind" />

            <TextView
                android:id="@+id/wind_value"
                style="@style/TextViewStyleByWeatherDesign.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/wind_value(viewModel.currentData[1])}"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintEnd_toEndOf="@id/wind_text"
                app:layout_constraintStart_toStartOf="@+id/wind_text"
                app:layout_constraintTop_toBottomOf="@id/wind_text"
                tools:text="10km/h" />

            <TextView
                android:id="@+id/humidity_text"
                style="@style/TextViewStyleByWeatherDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/big_rect_margin_start_end"
                android:text="@string/humidity"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/wind_text"
                tools:text="Humidity" />

            <TextView
                android:id="@+id/humidity_value"
                style="@style/TextViewStyleByWeatherDesign.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/humidity_value(viewModel.currentData[2])}"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintEnd_toEndOf="@+id/humidity_text"
                app:layout_constraintStart_toStartOf="@+id/humidity_text"
                app:layout_constraintTop_toBottomOf="@+id/humidity_text"
                tools:text="30%" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/hourly_text"
            style="@style/TextViewStyleByWeatherDesign.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hourly_text_margin_top"
            android:text="@string/hourly_forecast"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBottom_toTopOf="@id/weather_forecast_recycler_view"
            app:layout_constraintStart_toStartOf="@+id/weather_data"
            app:layout_constraintTop_toBottomOf="@+id/weather_data"
            tools:text="Hourly forecast">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_forecast_recycler_view"
            android:layout_width="@dimen/weather_forecast_layout_width"
            android:layout_height="@dimen/weather_forecast_layout_height"
            android:layout_marginStart="@dimen/weather_forecast_margin_start"
            android:layout_marginTop="@dimen/weather_forecast_margin_top"
            android:scrollbars="horizontal"
            app:layout_constraintStart_toStartOf="@id/hourly_text"
            app:layout_constraintTop_toBottomOf="@+id/hourly_text" />


        <ProgressBar
            android:id="@+id/weather_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:isVisible="@{viewModel.isVisible}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>