<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splash_fragment">

    <fragment
        android:id="@+id/today_forecast_fragment"
        android:name="com.endava.internship.mobile.weatherapp.ui.forecast.today.TodayForecastFragment"
        android:label="@string/todayForecastLabel"
        tools:layout="@layout/fragment_today_forecast" />

    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.endava.internship.mobile.weatherapp.ui.splashscreen.SplashFragment"
        android:label="@string/splashScreenLabel"
        tools:layout="@layout/fragment_splash" >

        <action
            android:id="@+id/action_splashFragment_to_today_forecast_fragment"
            app:destination="@id/today_forecast_fragment" />
    </fragment>


    <fragment
        android:id="@+id/weekly_forecast_fragment"
        android:name="com.endava.internship.mobile.weatherapp.ui.forecast.weekly.WeeklyForecastFragment"
        android:label="@string/weeklyForecastLabel"
        tools:layout="@layout/fragment_weekly_forecast" />
    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.endava.internship.mobile.weatherapp.ui.settings.SettingsFragment"
        android:label="@string/settingsFragmentLabel"
        tools:layout="@layout/fragment_settings" />
</navigation>